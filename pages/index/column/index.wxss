/* pages/index/column/index.wxss */
.main{
  display: flex;
  position: relative;
  padding: 0 30rpx;
  margin-top: 30rpx;
}
.img{
  width: 240rpx;
  height: 200rpx;
  background: rgba(0,0,0,0);
  border-radius: 8rpx;
  /* margin-left: 30rpx; */
  margin-right: 40rpx;
  margin-bottom: 40rpx;
}
.txt-title{
  font-size: 30rpx;
  font-family: PingFang SC, PingFang SC-Medium;
  font-weight: 500;
  color: #1d1d1d;
  margin-bottom: 14rpx;
  /* margin-top: 14rpx; */
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box; /** 对象作为伸缩盒子模型显示 **/
  -webkit-box-orient: vertical; /** 设置或检索伸缩盒对象的子元素的排列方式 **/
  -webkit-line-clamp: 2; /** 显示的行数 **/
  overflow: hidden; /** 隐藏超出的内容 **/
}
.txt-p{
  font-size: 22rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  color: #c8c8c8;
  margin-bottom: 36rpx;
  /* margin-right: 40rpx; */
}
.icon{
  width: 20rpx;
  height: 20rpx;
}
.icon-1{
  position: absolute;
  top: 130rpx;
  right: 164rpx;
}
.icon-2{
  position: absolute;
  top: 130rpx;
  right: 64rpx;
}
.txt-1{
  position: absolute;
  top: 130rpx;
  right: 118rpx;
}
.txt-2{
  position: absolute;
  top: 130rpx;
  right: 24rpx;
}
.txt{
  opacity: 0.8;
  font-size: 20rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  color: #999999;
}
.foot {
  margin-bottom: 18rpx;
  width: 400rpx;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box; /** 对象作为伸缩盒子模型显示 **/
  -webkit-box-orient: vertical; /** 设置或检索伸缩盒对象的子元素的排列方式 **/
  -webkit-line-clamp: 2; /** 显示的行数 **/
  overflow: hidden; /** 隐藏超出的内容 **/
}
