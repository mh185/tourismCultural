/* pages/index/healthCode/index.wxss */
.backGround{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: -99;
}
.van-nav-bar__left,
.van-nav-bar__right {
  bottom: unset !important;
}

.nav_left {
  display: flex;
  font-size: 40rpx;
  color: #000000;
  font-weight: 500;
  font-family: Source Han Serif CN;
}

.nav_left .nav_left_text {
  margin-left: 224rpx;
}
.card_box {
  margin: 20rpx 30rpx 0;
  /* padding: 48rpx 62rpx 0 48rpx; */
  width: 690rpx;
  height: 462rpx;
  background: #ffffff;
  border-radius: 8rpx;
  box-shadow: 0px 10rpx 20rpx 0px rgba(130,130,130,0.16); 
}
.top_box {
  font-size: 28rpx;
  font-family: Source Han Serif CN, Source Han Serif CN-Heavy;
  font-weight: 800;
  text-align: left;
  color: #1d1d1d;
  padding: 48rpx 0 38rpx 48rpx;
}
/* .pop_head{
  width: 6rpx;
