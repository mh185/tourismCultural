} */
.line {
  display: inline-block;
  width: 6rpx;
  height: 30rpx;
  background: linear-gradient(180deg, #A7C9FF 0%, #2149FF 100%);
  opacity: 1;
  border-radius: 0px 20rpx 20rpx 0px;
  margin-right: 26rpx;
}
.left_title {
  color: #646464 !important;
}
.input-class {
  font-size: 32rpx;
  font-family: Source Han Serif CN, Source Han Serif CN-Medium;
  font-weight: 500;
  color: #1d1d1d;
}
.right_arrow {
  color: #fff;
}
.van-cell {
  padding: 28rpx 62rpx 28rpx 48rpx !important;
}
.button {
  position: fixed;
  left: 50%;
  transform: translateX(-50%);
  bottom: 92rpx;
  width: 580rpx;
  height: 80rpx;
  background: linear-gradient(180deg, #A7C9FF 0%, #2149FF 100%);
  box-shadow: 0px -20rpx 40rpx 0px rgba(184,184,184,0.1); 
  border-radius: 40rpx;
  font-size: 28rpx;
  font-family: Source Han Serif CN, Source Han Serif CN-Medium;
  font-weight: 500;
  text-align: center;
  color: #ffffff;
  line-height: 80rpx;
}
