<van-nav-bar id="nav-bar" fixed='{{true}}' placeholder='{{true}}' border='{{false}}' custom-class='back_class' bind:click-left="onClickLeft">
	<view slot="left" class="nav_left">
		<van-icon name="arrow-left" />
		<text>考察点导览</text>
	</view>
</van-nav-bar>
<!-- <image class="backGround" src="../images/background.png"></image> -->
<view class="main" wx:for="{{allList}}" wx:key="index" bindtap="toMain" data-id='{{item.id}}' data-name='{{item.observationPointName}}'>
    <image class="img" src="{{host}}{{item.fileManage.url}}"></image>
    <view class="now">
        <!-- <view class="txt1">正在游玩</view> -->
        <!-- <view class="txt2">{{item.currentTourism}}人</view> -->
    </view> 
    <view class="footer">
        <view class="name">{{item.observationPointName}}</view>
        <!-- <view class="time">开放时间：{{item.openTime}}-{{item.closeTime}}</view> -->
        <view  class="look" catchtap="toDetail" data-url='{{item.mapUrl}}' data-id='{{item.id}}' data-name='{{item.observationPointName}}'>{{item.mapUrl==null?'查看详情':'720全景'}}
            <!-- <van-icon class="eye" name="eye-o" /> -->
        </view>
    </view>
    <text class="star">{{item.starLevel}}</text>
</view>
