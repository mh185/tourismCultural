page {
  height: 88%;
}

.container {
  height: 100%;
}

.card_wrap {
  position: relative;
  width: 100%;
  height: 100%;
  opacity: 0.98;
}

.card_wrap .card_item {
  position: absolute;
  width: 600rpx;
  height: 1000rpx;
  top: 50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
  padding: 30rpx;
  background: #fff;
  border: 2rpx solid #E6E6E6;
  border-radius: 20rpx;
  box-shadow: 2rpx 2rpx 8rpx 0rpx rgba(0, 0, 0, 0.1);
}

.card_item:nth-child(1) {
  z-index: 4;
  transform: translateX(-53%) translateY(-50%);
}

.card_item:nth-child(2) {
  z-index: 3;
  transform: translateX(-53%) translateY(-50%);
}

.card_item:nth-child(3) {
  z-index: 2;
  transform: translateX(-50%) translateY(-51%);
}

.card_item:nth-child(4) {
  z-index: 1;
  transform: translateX(-47%) translateY(-52%);
}

.card-container {
  width: 100%;
  height: 100%;
}

.van-nav-bar__left,.van-nav-bar__right {
  bottom: unset !important;
}
.nav_left{
  display: flex;
  font-size: 40rpx;
  color: #000000;
  font-weight: 500;
  font-family: Source Han Serif CN;
}
.nav_left .nav_left_text{
    margin-left:224rpx;
}
.backGround{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: -99;
}
.icon{
  width: 32rpx;
