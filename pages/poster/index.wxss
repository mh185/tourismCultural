.poster_img {
  margin: 30rpx;
  height: 400rpx;
  border-radius: 8rpx 8rpx 0rpx 0rpx;
}

.poster_img image {
  width: 100%;
  height: 100%;
}

.poster_logo {
  width: 100%;
  display: flex;
  justify-content: center;
}

.poster_title {
  margin: 80rpx;
  font-size: 40rpx;
