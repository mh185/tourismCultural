.yunceng_box {
  margin-top: 92px;
}
.yunceng {
  width: 750rpx;
  height: 264rpx;
  animation: yunceng 20s linear 0s infinite alternate;
}
@keyframes yunceng {
  from {
    transform: translate3d(-125rpx, 0, 0);
  }
  to {
    transform: translate3d(180rpx, 0, 0);
  }
}
.upper_box {
  position: absolute;
  top: 0;
  width: 100%;
}
