<!--pages/user/authentication/index.wxml-->
<image class="backGround" src="{{iconUrl}}/background_wl.png"></image>
<van-nav-bar id="nav-bar" fixed='{{true}}' placeholder='{{true}}' border='{{false}}' custom-class='back_class' bind:click-left="onClickLeft">
  <view slot="left" class="nav_left">
    <van-icon name="arrow-left" />
    <text>实名认证</text>
  </view>
</van-nav-bar>
<view class="authentication">
  <view class="authent_title"><span class="line"></span>实名认证</view> 
  <van-cell-group>
    <van-field
    value="{{ name }}"
    clearable
    label="姓名"
    placeholder="请填写真实姓名"
    input-align="right"
    disabled="{{isRead}}"
    bind:change="onName"
  />
  <van-field
    value="{{ idr }}"
    label="证件号"
    placeholder="请填写证件号"
    clearable
    disabled="{{isRead}}"
    input-align="right"
    bind:change="onIdr"
  />
  </van-cell-group>
</view>

<view class="btn" bindtap="btn" wx:if="{{authentication == 0}}">{{butTitle}}</view>
