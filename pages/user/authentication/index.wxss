/* pages/user/authentication/index.wxss */
.backGround{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: -99;
}
.van-nav-bar__left,
.van-nav-bar__right {
  bottom: unset !important;
}

.nav_left {
  display: flex;
  font-size: 40rpx;
  color: #000000;
  font-weight: 500;
  font-family: Source Han Serif CN;
}

.nav_left .nav_left_text {
  margin-left: 224rpx;
}
.authentication {
  background: #FFFFFF;
  box-shadow: 0px 10rpx 20rpx rgba(130, 130, 130, 0.16);
  opacity: 1;
  border-radius: 8rpx;
  width: 690rpx;
  height: 360rpx;
  margin: 20rpx auto;
  padding-top: 50rpx;
}

.authent_title {

  font-size: 28rpx;
  font-family: Source Han Serif CN;
  font-weight: 800;
  line-height: 38rpx;
  color: #1D1D1D;
  margin-left: 30rpx;
  margin-bottom: 46rpx;
}

.line {
  display: inline-block;
  width: 6rpx;
  height: 30rpx;
  background: linear-gradient(180deg, #A7C9FF 0%, #2149FF 100%);
  opacity: 1;
  border-radius: 0px 20rpx 20rpx 0px;
  margin-right: 26rpx;
}

.btn {
  background: linear-gradient(180deg, #A7C9FF 0%, #2149FF 100%);
  box-shadow: 0px -20rpx 20rpx rgba(184, 184, 184, 0.1);
  border-radius: 40rpx;
  color: #FFFFFF;
  font-size: 28rpx;
  text-align: center;
  width: 80%;
  position: fixed;
  bottom: 92rpx;
  margin: auto;
  left: 0;
  right: 0;
  height: 80rpx;
  line-height: 80rpx;
  
}