/* pages/logIn/otherLogin/index.wxss */
.otherLogin{
    width: 100%;
    position: fixed;
    height: 100%;
    top: 0px;
    left: 0px;
    background: #fff;
    padding: 160rpx 40rpx 60rpx;
    box-sizing: border-box;
}
.otherLoginTit{
    font-size:48rpx;
font-family:PingFang SC;
font-weight:bold;
color:rgba(47,47,47,1);
margin-bottom: 80rpx;
}
.otherLoginBox{
    width: 100%;
}
.otherLoginBoxList{
    width: 100%;
    padding: 20rpx;
    border-bottom: 1px solid rgba(232,232,232,1);
    position: relative;
    box-sizing: border-box;
}
.LoginBtn{
    width: 100%;
    height: 100rpx;
    margin-top: 80rpx;
}
.LoginButton{
    width: 100% !important;
    height: 100rpx !important;
    background:rgba(2,125,88,1);
    border-radius:50rpx;
    color: #fff;
    font-size: 32rpx;
    font-weight: 500;
    padding: 0 !important;
    line-height: 100rpx;
}
.otherLoginBoxLisTit{
    font-size: 30rpx;
    color: #2F2F2F;
    width: 120rpx;
    line-height: 60rpx;
}
.otherLoginBoxLisTxt,.CaptchaTxt{
    width: calc(100% - 160rpx);
}
.Captcha{
    position: absolute;
    right: 0px;
    top: 20rpx;
    height:70rpx;
    font-size:24rpx;
    width:160rpx;
    border-radius: 10rpx;
    background:rgba(2,125,88,1);
    color: #fff;
    text-align: center;
    line-height:70rpx;
    z-index: 9999;
}
.CaptchaN{
    position: absolute;
    right: 0px;
    top: 20rpx;
    height:70rpx;
    font-size:24rpx;
    width:160rpx;
    border-radius: 10rpx;
    background:rgba(238,238,237,1);
    color: #fff;
    text-align: center;
    line-height:70rpx;
    z-index: 9999;
}
.otherLoginBoxLisTxtInput,.CaptchaInput{
    font-size: 30rpx;
    color: #2F2F2F;
    height: 60rpx;
    width:100%;
}
.otherLoginImg{
    position: absolute;
    right: 0px;
    top: 40rpx;
    height: 30rpx;
    width: 30rpx;
}
.choose {
    display: flex;
    width: 100%;
    align-items: center;
    height: 80rpx;
}
.choose .choose_text {
    margin-left: 10rpx;
}
.choose text {
    color: #027D58;
}
  